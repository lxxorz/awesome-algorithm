{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "isolatedModules": true, // esbuild 限制
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "incremental": true,
    "skipLibCheck": true,
    "importsNotUsedAsValues": "error",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "lib": [
      "ESNext"
    ],
    "types": [
      "naive-ui/volar"
    ]
  }
}